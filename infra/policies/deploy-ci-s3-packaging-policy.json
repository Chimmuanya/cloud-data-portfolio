{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PackagingBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts",
        "s3:GetObject",
        "s3:GetObjectVersion"
      ],
      "Resource": [
        "arn:aws:s3:::${PACKAGING_BUCKET}/*",
        "arn:aws:s3:::${INPUT_BUCKET}"
      ]
    },
    {
      "Sid": "PackagingBucketListAndLocation",
      "Effect": "Allow",
      "Action": [
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::${PACKAGING_BUCKET}",

      ]
    },
    {
      "Sid": "InputBucketReadAndReports",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket",
        "s3:GetBucketLocation",
        "s3:PutObject",
        "s3:PutObjectAcl",
        "s3:AbortMultipartUpload",
        "s3:ListMultipartUploadParts",
        "s3:GetObjectVersion",
        "s3:GetBucketNotification"
      ],
      "Resource": [
        "arn:aws:s3:::${INPUT_BUCKET}",
        "arn:aws:s3:::${INPUT_BUCKET}/*"
      ]
    }
  ]
}
