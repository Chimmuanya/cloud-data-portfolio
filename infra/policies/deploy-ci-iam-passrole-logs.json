{
  "Version":"2012-10-17",
  "Statement":[
    {
      "Sid":"AllowPassOnlyForProjectRoles",
      "Effect":"Allow",
      "Action":["iam:PassRole","iam:GetRole"],
      "Resource":["arn:aws:iam::${ACCOUNT}:role/project1-data-qc-*","arn:aws:iam::${ACCOUNT}:role/ci-deploy-project1-role"]
    },
    {
      "Sid":"CloudWatchLogsWriteReadScoped",
      "Effect":"Allow",
      "Action":["logs:CreateLogGroup","logs:CreateLogStream","logs:PutLogEvents","logs:DescribeLogStreams","logs:GetLogEvents","logs:FilterLogEvents"],
      "Resource":"arn:aws:logs:${REGION}:${ACCOUNT}:*"
    },
    {
      "Sid":"STSReadHelpers",
      "Effect":"Allow",
      "Action":["sts:GetCallerIdentity"],
      "Resource":"*"
    }
  ]
}
