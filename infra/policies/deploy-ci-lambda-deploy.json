{
  "Version":"2012-10-17",
  "Statement":[
    {
      "Sid":"LambdaCreateUpdateScoped",
      "Effect":"Allow",
      "Action":[
        "lambda:CreateFunction","lambda:DeleteFunction","lambda:GetFunction","lambda:UpdateFunctionCode",
        "lambda:UpdateFunctionConfiguration","lambda:PublishVersion","lambda:GetFunctionConfiguration"
      ],
      "Resource":["arn:aws:lambda:${REGION}:${ACCOUNT}:function:data-qc-lambda-*"]
    },
    {
      "Sid":"LambdaPermissionsAndTagging",
      "Effect":"Allow",
      "Action":["lambda:AddPermission","lambda:RemovePermission","lambda:TagResource","lambda:UntagResource"],
      "Resource":["arn:aws:lambda:${REGION}:${ACCOUNT}:function:data-qc-lambda-*"]
    }
  ]
}
