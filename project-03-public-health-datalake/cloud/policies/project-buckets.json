{
  "Version": "2012-10-17",
  "Statement": [

    /* ---------- Enforce TLS ---------- */
    {
      "Sid": "DenyInsecureTransport",
      "Effect": "Deny",
      "Principal": "*",
      "Action": "s3:*",
      "Resource": [
        "arn:aws:s3:::${RAW_BUCKET}",
        "arn:aws:s3:::${RAW_BUCKET}/*",
        "arn:aws:s3:::${CLEAN_BUCKET}",
        "arn:aws:s3:::${CLEAN_BUCKET}/*"
      ],
      "Condition": {
        "Bool": {
          "aws:SecureTransport": "false"
        }
      }
    },

    /* ---------- Allow Lambda access ---------- */
    {
      "Sid": "AllowLambdaAccess",
      "Effect": "Allow",
      "Principal": {
        "Service": "lambda.amazonaws.com"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": "*"
    }
  ]
}
